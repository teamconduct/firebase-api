rules_version = '2';

service cloud.firestore {
    match /databases/{database}/documents {

        function isInTeam(teamId) {
            let userId = get(/databases/$(database)/documents/userAuthIdDict/$(request.auth.uid)).data.userId;
            let userTeams = get(/databases/$(database)/documents/users/$(userId)).data.teams;
            return request.auth.uid != null && teamId in userTeams;
        }

        match /userAuthIdDict/{userId} {
            allow read, write: if false;
        }
        match /users/{userId} {
            allow read, write: if false;
        }
        match /teams/{teamId}/{document=**} {
            allow write: if false;
            allow read: if isInTeam(teamId);
        }
        match /{document=**} {
            allow read, write: if false;
        }
    }
}

{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "./lib",
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "compileOnSave": true,
    "include": [
        "index.ts",
        "src/**/*.ts",
        "test/**/*.ts",
    ]
}

{
    "author": "Steven Kellner",
    "license": "MIT",
    "main": "lib/src/index.js",
    "engines": {
        "node": "18"
    },
    "scripts": {
        "build": "tsc",
        "rebuild": "tsc --build --force",
        "build:watch": "tsc --watch",
        "lint": "eslint --ext .js,.ts .",
        "lint:fix": "eslint --ext .js,.ts . --fix",
        "serve": "firebase emulators:start --inspect-functions",
        "logs": "firebase functions:log",
        "deploy": "firebase deploy --only functions",
        "emulator:start": "npm run rebuild && npm run serve",
        "emulator:wait": "ts-node test/waitForEmulator.ts",
        "emulator:end": "kill-port 5001 8080",
        "test": "concurrently \"npm run emulator:start || true\" \"npm run emulator:wait && mocha && npm run emulator:end\"",
        "test:coverage": "nyc npm run test",
        "coverage:report": "npx http-server -o ./coverage -p 8090",
        "upgrade": "ncu --upgrade --install always"
    },
    "dependencies": {
        "@stevenkellner/firebase-function": "^1.4.134",
        "@stevenkellner/team-conduct-api": "^1.0.5",
        "firebase-admin": "^13.3.0",
        "firebase-functions": "^6.3.2",
        "i18n": "^0.15.1"
    },
    "devDependencies": {
        "@assertive-ts/core": "^2.1.0",
        "@eslint/compat": "^1.2.9",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.26.0",
        "@types/i18n": "^0.13.12",
        "@types/mocha": "^10.0.10",
        "@types/tcp-port-used": "^1.0.4",
        "@typescript-eslint/eslint-plugin": "^8.32.0",
        "@typescript-eslint/parser": "^8.32.0",
        "concurrently": "^9.1.2",
        "eslint": "^9.26.0",
        "eslint-config-google": "^0.14.0",
        "eslint-plugin-import": "^2.31.0",
        "firebase-functions-test": "^3.4.1",
        "globals": "^16.1.0",
        "kill-port": "^2.0.1",
        "mocha": "^11.2.2",
        "nyc": "^17.1.0",
        "tcp-port-used": "^1.0.2",
        "ts-mockito": "^2.6.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "unique-names-generator": "^4.7.1"
    }
}

{
    "name": "functions",
    "main": "lib/src/index.js",
    "engines": {
        "node": "18"
    },
    "scripts": {
        "lint": "eslint --ext .js,.ts .",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "serve": "firebase emulators:start --inspect-functions",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "test": "mocha --reporter spec -r ts-node/register --timeout 3600000 --reporter-option maxDiffSize=0 test/**/*.test.ts",
        "upgrade": "ncu --upgrade --install always"
    },
    "devDependencies": {
        "@assertive-ts/core": "^2.1.0",
        "@types/i18n": "^0.13.12",
        "@types/mocha": "^10.0.10",
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "eslint": "^9.17.0",
        "eslint-config-google": "^0.14.0",
        "eslint-plugin-import": "^2.31.0",
        "firebase-functions-test": "^3.4.0",
        "mocha": "^11.0.1",
        "ts-mockito": "^2.6.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "unique-names-generator": "^4.7.1"
    },
    "dependencies": {
        "@stevenkellner/firebase-function": "^1.4.132",
        "@stevenkellner/typescript-common-functionality": "^1.0.49",
        "firebase-admin": "^13.0.2",
        "firebase-functions": "^6.2.0",
        "i18n": "^0.15.1"
    },
    "private": true
}

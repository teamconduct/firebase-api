        "@types/i18n": "^0.13.12",
        "@types/mocha": "^10.0.10",
        "@typescript-eslint/eslint-plugin": "^8.32.0",
        "@typescript-eslint/parser": "^8.32.0",
        "eslint": "^9.26.0",
        "eslint-config-google": "^0.14.0",
        "eslint-plugin-import": "^2.31.0",
        "mocha": "^11.3.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
